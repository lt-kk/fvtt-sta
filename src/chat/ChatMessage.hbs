<li class="sta-app sta-chat-message message flexcol {{cssClass}}" data-message-id="{{message._id}}"
    {{#if borderColor}}style="border-color:{{borderColor}}"{{/if}}>
  <div class="window-content">
    <form class="message-wrapper border-left">
      <h2 class="message-header">
        <span>{{alias}}</span>
        <time class="message-timestamp flex-last">{{timeSince message.timestamp}}</time>
        {{#if isWhisper}}
          <span class="whisper-to flex-last">{{localize 'CHAT.To'}}: {{whisperTo}}</span>
        {{/if}}
        {{#if message.flavor}}
          <span class="flavor-text flex-last">{{{message.flavor}}}</span>
        {{/if}}
        {{#if canDelete}}
          <a class="message-delete inner flex-last"><i class="fas fa-trash"></i></a>
        {{/if}}
      </h2>
      {{{message.content}}}
    </form>
  </div>
</li>
