<div class="dice-roll">
  {{#if flavor}}
    <div class="dice-flavor">{{flavor}}</div>
  {{/if}}
  <div class="dice-result">
    <div class="dice-formula">
      {{localize (concat "sta.roll." type "._singular")}}:
      {{formula}}
      &lt;= {{staData.target}}
    </div>
    <div class="dice-tooltip">
      <section class="tooltip-part">
        <div class="dice">
          <header class="part-header flexrow">
            <span class="part-formula">
              {{tooltip.attribute}}
              {{tooltip.system}}
              +
              {{tooltip.discipline}}
              {{tooltip.department}}
            </span>
<!--            <span class="part-flavor"></span>-->
<!--            <span class="part-total"></span>-->
          </header>
          <ol class="dice-rolls">
            {{#each tooltip.rolls}}
              <li class="roll {{classes}}">{{{value}}}</li>
            {{/each}}
          </ol>
        </div>
      </section>
      <div class="actions">
        <button class="test">Do something nice</button>
      </div>
    </div>
    <h4 class="dice-total">
      <span class="successes">{{localize "sta.roll.success._plural"}}: {{staResult.successes}}</span>
      {{#if staResult.complications}}
        <span class="complications">{{localize "sta.roll.complication._plural"}}: {{staResult.complications}}</span>
      {{/if}}
    </h4>
  </div>
</div>
