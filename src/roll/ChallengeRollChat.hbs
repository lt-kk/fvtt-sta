<section class="message-content border-left">
  <h3 class="roll-formula">
    {{localize "sta.roll.challenge._singular"}} {{formula}}
  </h3>
  <div class="columns">
    <div class="roll-dice">
      {{#each tooltip.rolls}}
        <label class="roll {{classes}} d6">
          {{value}}
          <input class="reroll" type="checkbox" name="reroll-{{@index}}" />
        </label>
      {{/each}}
    </div>
    <div class="rows">
      <span class="roll-data">
        {{staData.source.name}}
        <span class="actions-used">
          <span class="tiny">{{localize "sta.actions"}}:</span>
          <span class="actions-simple">{{staData.actions.simple}}</span>/
          <span class="actions-task">{{staData.actions.task}}</span>
        </span>
      </span>
      <div class="roll-result">
        <span class="successes">
          <span class="tiny">{{localize "sta.roll.success._plural"}}:</span>
          {{staData.result.successes}}
        </span>
        {{#if staData.result.effects}}
          <span class="effects">
            <span class="tiny">{{localize "sta.roll.effect._plural"}}:</span>
            {{staData.result.effects}}
          </span>
        {{/if}}
      </div>
    </div>
  </div>
</section>
<section class="message-actions">
  <button data-action="reroll">{{localize "sta.roll.rereoll"}}</button>
</section>
