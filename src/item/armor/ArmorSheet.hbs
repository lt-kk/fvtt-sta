<form class="sta-body" autocomplete="off">
  {{> (concat templatePath "/item/_partials/ItemHeader.hbs") this }}

  <section class="properties border-left">
    <h1>{{localize "sta.item.properties"}}
      <label class="property equipped on-border">
        {{localize "sta.item.armor.equipped"}}
        <input class="form-control inner" name="system.equipped" {{checked sta.equipped}}
               type="checkbox" data-dtype="Boolean" />
      </label>
    </h1>

    <section class="property opportunity border-left">
      <h4>{{localize "sta.item.opportunity"}}</h4>
      <div class="scale-value">
        {{#range 0 settings.item.opportunity.max}}
          <label class="scale-pill
              {{#if (eq 0 i)}}success{{/if}}
            {{#if (eq ../sta.opportunity i)}}checked{{/if}}">
            {{i}}
            <input name="system.opportunity" type="radio" value="{{i}}" data-dtype="Number"
                   {{#if (eq ../sta.opportunity i)}}checked="checked"{{/if}} />
          </label>
        {{/range}}
      </div>
    </section>
    <section class="property escalation border-left">
      <h4>{{localize "sta.item.escalation"}}</h4>
      <div class="scale-value">
        {{#range 0 settings.item.escalation.max}}
          <label class="scale-pill
              {{#if (eq 0 i)}}success{{/if}}
            {{#if (eq ../sta.escalation i)}}checked{{/if}}">
            {{i}}
            <input name="system.escalation" type="radio" value="{{i}}" data-dtype="Number"
                   {{#if (eq ../sta.escalation i)}}checked="checked"{{/if}} />
          </label>
        {{/range}}
      </div>
    </section>

    <section class="property protection border-left">
      <h4>{{localize "sta.item.armor.protection"}}</h4>
      <div class="scale-value">
        {{#range 0 settings.item.armor.protection.max}}
          <label class="scale-pill
            {{#if (eq 0 i)}}warn{{/if}}
            {{#if (eq ../sta.protection i)}}checked{{/if}}">
            {{i}}
            <input name="system.protection" type="radio" value="{{i}}" data-dtype="Number"
                   {{#if (eq ../sta.protection i)}}checked="checked"{{/if}} />
          </label>
        {{/range}}
      </div>
    </section>
  </section>

  {{> (concat templatePath "/item/_partials/PropertyText.hbs")
    name="description" title="sta.item.description" value=sta.description}}
  {{> (concat templatePath "/item/_partials/Rule.hbs")
    title="sta.item.rule" rule=sta.rule}}

</form>
