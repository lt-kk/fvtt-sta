<section class="icon">
  <img src="{{sta.img}}" data-edit="img" title="{{sta.name}}" />
</section>

<section class="summary">
  <input class="control property name" name="name" type="text" value="{{sta.name}}" />
  {{#if item.actor}}
    <span class="owner">{{localize "sta.owner"}}: {{item.actor.name}}</span>
  {{/if}}
</section>